<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="240dp"
    android:layout_width="170dp"
    android:theme="@style/Theme.MaterialComponents.Light"

    >

    <ImageButton
        android:id="@+id/btnBorrar"
        android:layout_width="@dimen/w_btn_borrar"
        android:layout_height="@dimen/h_btn_borrar"
        android:layout_marginStart="@dimen/marginstart_btnborrar"
        android:layout_marginBottom="@dimen/marginbottom_btn_borrar"
        android:src="@drawable/ic_borrar"
        android:background="@android:color/transparent"
        android:elevation="@dimen/dimension10dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">

    </ImageButton>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/item_libro"
        android:layout_width="150dp"
        android:layout_height="210dp"
        style="@style/cardView"
        android:layout_margin="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/portada"
                android:layout_width="match_parent"
                android:layout_height="@dimen/layoutRecordarme_size"
                android:layout_marginTop="@dimen/dimension10dp"
                android:layout_marginEnd="@dimen/dimension10dp"
                android:layout_marginStart="@dimen/dimension10dp"
                app:layout_constraintTop_toTopOf="parent"
                >

            </ImageView>

            <TextView
                android:id="@+id/titulo"
                style="@style/titulo_style"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimension40dp"
                android:layout_marginStart="@dimen/dimension20dp"
                android:layout_marginEnd="@dimen/dimension20dp"
                android:textAlignment="center"
                android:lines="2"

                app:layout_constraintTop_toBottomOf="@id/portada">

            </TextView>


        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>


    <ImageButton

        android:id="@+id/btnFavorito"
        android:elevation="@dimen/dimension10dp"
        android:layout_width="@dimen/medida_checkfavorite"
        android:layout_height="@dimen/medidah_checkfavorite"
        android:layout_marginEnd="@dimen/marben_checkfavorite"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@android:color/transparent">

    </ImageButton>


</androidx.constraintlayout.widget.ConstraintLayout>






